<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Synonms</Authors>
    <Company>NMS Development Ltd</Company>
    <Product>Synonms Versioning (Core)</Product>
    <Copyright>2020 NMS Development Ltd</Copyright>
    <RepositoryUrl>https://github.com/synonms/versioning</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageProjectUrl>https://github.com/synonms/versioning</PackageProjectUrl>
    <PackageTags>Versioning</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Synonms Versioning uses attributes to associate versions with classes, properties and methods. Using this mechanism you can easily tailor APIs, data and associated documentation based on the requested version without having to provide duplicate code for each version.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Linq" Version="4.3.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.2" />
  </ItemGroup>

</Project>
